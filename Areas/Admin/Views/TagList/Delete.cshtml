@model OnlineShop.Models.TagLists
@{
    ViewData["Title"] = "Delete";
}
<br />

<h2 class="text-info">Delete Product Type</h2>

<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="TagList"></label>
        </div>
        <div class="col-5">
            <input asp-for="TagList" readonly="readonly" class="form-control" />
        </div>
        <span asp-validation-for=" TagList" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Delete" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>

    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}

